# Neo4j Configuration
# Copy this file to .env and customize for your needs

# Container and database name
NEO4J_CONTAINER_NAME=neo4j
NEO4J_DATABASE=neo4j

# Ports
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687

# Data directory (absolute or relative path)
NEO4J_DATA_DIR=./neo4j-data

# Authentication (format: username/password)
NEO4J_AUTH=neo4j/change-password

# Memory settings (adjust based on your system)
NEO4J_HEAP_INITIAL=2G
NEO4J_HEAP_MAX=4G
NEO4J_OFF_HEAP_MAX=1G
NEO4J_TX_MAX=1G
NEO4J_TX_TOTAL_MAX=1G
